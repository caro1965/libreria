        productos1.add(new Producto("Carpeta", 80));
        productos1.add(new Producto("Resaltador", 30));
        productos1.add(new Producto("Regla", 25));
        productos1.add(new Producto("Mochila", 200));
        productos1.add(new Producto("Calculadora", 150));
        productos1.add(new Producto("Agenda", 70));
        productos1.add(new Producto("Tijeras", 35));

        ArrayList<Producto> productos2 = new ArrayList<>(productos1);
        ArrayList<Producto> productos3 = new ArrayList<>(productos1);
        ArrayList<Producto> productos4 = new ArrayList<>(productos1);

        Date fechaCompra = new Date();

        Cliente cliente1 = new Cliente("Juan", productos1, fechaCompra);
        Cliente cliente2 = new Cliente("María", productos2, fechaCompra);
        Cliente cliente3 = new Cliente("Pedro", productos3, fechaCompra);
        Cliente cliente4 = new Cliente("Lucía", productos4, fechaCompra);

        cliente1.imprimirTicket();
        cliente2.imprimirTicket();
        cliente3.imprimirTicket();
        cliente4.imprimirTicket();
    }
}
